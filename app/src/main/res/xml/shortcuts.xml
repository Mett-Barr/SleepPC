<?xml version="1.0" encoding="utf-8"?>
<shortcuts xmlns:android="http://schemas.android.com/apk/res/android">
    <shortcut
        android:enabled="true"
        android:icon="@drawable/bedtime_fill0_wght400_grad0_opsz48"
        android:shortcutDisabledMessage="@string/sc_disabled_message"
        android:shortcutId="compose"
        android:shortcutLongLabel="@string/sc_long_label"
        android:shortcutShortLabel="@string/sc_short_label">
        <intent
            android:action="com.example.sleeppc.test"
            android:targetClass="com.example.sleeppc.ShortcutActivity"
            android:targetPackage="com.example.sleeppc">
