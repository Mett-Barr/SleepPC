        android:enabled="true"
        android:icon="@drawable/power_settings_new_black_48dp"
        android:shortcutDisabledMessage="@string/sc_disabled_message"
        android:shortcutId="unlock"
        android:shortcutLongLabel="@string/unlock_long_label"
        android:shortcutShortLabel="@string/unlock_short_label">
        <intent
            android:action="com.example.sleeppc.test"
            android:targetClass="com.example.sleeppc.ShortcutActivity"
            android:targetPackage="com.example.sleeppc">
            <extra
                android:name="shortcut_data"
                android:value="unlock_pc" />
        </intent>
        <!-- If your shortcut is associated with multiple intents, include them
             here. The last intent in the list determines what the user sees when
